<%- include('../partials/header') %>

<h2>Flight List</h2>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Release Year</th>
            <th>Rating</th>
            <th>Cast</th>
            <th>Now Showing</th>
          </tr>
    </thead>
    <tbody>
        <% for (let m of flightList) {  %>  
            <tr>   
                <td><%= m.title %></td>
                <td><%= m.releaseYear %></td>
                <td><%= m.mpaaRating %></td>
                <td><%= m.cast.join(', ') %></td>
                <td><%= m.nowShowing ? 'Yes' : 'No' %></td>
            </tr>
        <% } %>
    </tbody>
</table>
<%- include('../partials/footer') %>
